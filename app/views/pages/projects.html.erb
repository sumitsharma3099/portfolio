<section class="py-16">
  <div class="container mx-auto">
    <!-- Project Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Loop through each project and display a card for each -->
      <% projects_list.each do |project| %>
        <!-- Project Card with name, description, and links -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <!-- Project name -->
          <h3 class="text-xl font-bold mb-2"><%= project[:name] %></h3>

          <!-- Project description -->
          <p class="text-gray-700 mb-4"><%= project[:description] %></p>

          <!-- Links to live demo and GitHub repository -->
          <div class="flex justify-between">
            <a href="<%= project[:live_demo_url] %>" target="_blank" class="text-blue-500 hover:underline">Live Demo</a>
            <a href="<%= project[:github_repo_url] %>" target="_blank" class="text-blue-500 hover:underline">GitHub Repo</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
