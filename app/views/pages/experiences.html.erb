<!-- app/views/experiences/index.html.erb -->

<section class="bg-gray-100 py-16">
  <div class="container mx-auto">
    <!-- Main heading for the Work Experience section -->
    <h2 class="text-3xl font-bold mb-8">Work Experience</h2>

    <!-- Experience Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Loop through each experience and display a card for each -->
      <% experiences_list.each do |experience| %>
        <!-- Experience Card with company logo, details, and duration -->
        <div class="bg-green-300 p-6 rounded-lg shadow-md mb-6 flex flex-col items-center">
          <!-- Company Logo -->
          <%= image_tag("#{experience[:logo_url]}", alt: "#{experience[:company]}", class: 'object-contain mb-4') %>

          <!-- Experience Details -->
          <h3 class="text-xl font-bold mb-2"><%= experience[:position] %> - <%= experience[:company] %></h3>
          <p class="text-gray-700 mb-4"><%= experience[:description] %></p>
          <p class="text-gray-500"><%= experience[:duration] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>
